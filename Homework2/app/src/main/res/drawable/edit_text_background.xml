<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层1（底层，最深的阴影） -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="4dp">
        <shape>
            <corners android:radius="8dp" />
            <!-- 深灰色阴影，透明度约25% -->
            <solid android:color="#40000000" />
        </shape>
    </item>
    <!-- 阴影层2（中层，较浅的阴影） -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="2dp">
        <shape>
            <corners android:radius="8dp" />
            <!-- 浅灰色阴影，透明度约15% -->
            <solid android:color="#26000000" />
        </shape>
    </item>
    <!-- 主体层（顶层，原来的样式） -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#A9A9A9" />
            <padding
                android:left="10dp"
                android:right="15dp"
                android:top="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</layer-list>