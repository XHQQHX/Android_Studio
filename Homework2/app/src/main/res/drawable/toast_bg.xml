<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 普通状态：青柠绿+浅蓝渐变 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="270"
                android:startColor="#E6F7F0"
            android:endColor="#E0F2FF" />
            <stroke android:width="1dp" android:color="#D8EFE6" />
        </shape>
    </item>
    <!-- 按压状态：加深清新感 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="270"
                android:startColor="#C8E8D8"
            android:endColor="#C0E0F0" />
            <stroke android:width="1dp" android:color="#C4E4D4" />
        </shape>
    </item>
</selector>